# 本番環境設定

# APIキー
PERPLEXITY_API_KEY=prod_key_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# データベース接続情報
DB_HOST=production-db.example.com
DB_PORT=5432
DB_NAME=return_gift_prod
DB_USER=prod_user
DB_PASSWORD=prod_password_xxxxxxxx
DB_SSL_MODE=require

# アプリケーション設定
APP_ENV=production
APP_PORT=8080
APP_URL=https://return-gift.example.com
